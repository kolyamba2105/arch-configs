Config
  { font = "xft:JetBrainsMono Nerd Font:weight=medium:pixelsize=14:antialias=true:hinting=true",
    bgColor = "#2e3440",
    fgColor = "#d8dee9",
    position = Top,
    overrideRedirect = False,
    lowerOnStart = True,
    hideOnStart = False,
    allDesktops = True,
    persistent = True,
    commands =
      [ Run Date "%a %d/%m/%y - %H:%M" "date" 50,
        Run Cpu ["-t", "<total>%", "-H", "50", "--high", "#bf616a"] 20,
        Run Memory ["-t", "<used>M (<usedratio>%)"] 20,
        Run DiskU [("/", "<free> free")] [] 60,
        Run Com "uname" ["-r"] "" 3600,
        Run
          DynNetwork
          [ "-t",
            "<tx> / <rx>",
            "--Low",
            "1000",
            "--High",
            "5000"
          ]
          10,
        Run Kbd [("us", "US"), ("pl", "PL"), ("ru", "RU"), ("ua", "UA")],
        Run
          Battery
          [ "-t",
            "<acstatus>",
            "-L",
            "20",
            "-l",
            "#bf616a",
            "--",
            "-O",
            "<fc=#88c0d0> </fc> <left>",
            "-o",
            "<fc=#88c0d0>  </fc> <left>",
            "-P"
          ]
          10,
        Run UnsafeStdinReader
      ],
    alignSep = "}{",
    template =
      "<fc=#88c0d0>  </fc> %UnsafeStdinReader% }{ <fc=#88c0d0> </fc> %dynnetwork% <fc=#d8dee9>  </fc> <fc=#88c0d0> </fc> %cpu% <fc=#d8dee9>  </fc> <fc=#88c0d0> </fc> %memory% <fc=#d8dee9>  </fc> <fc=#88c0d0> </fc> %disku% <fc=#d8dee9>  </fc> %battery% <fc=#d8dee9>  </fc> <fc=#88c0d0> </fc> %kbd% <fc=#d8dee9>  </fc> <fc=#88c0d0> </fc> %date% "
  }
