Config
  { font = "xft:JetBrainsMono:weight=bold:pixelsize=14:antialias=true"
  , bgColor = "#424242"
  , fgColor = "#e0e0e0"
  , position = Top
  , overrideRedirect = False
  , lowerOnStart = True
  , hideOnStart = False
  , allDesktops = True
  , persistent = True
  , commands =
      [ Run Date "%b %d %Y - %H:%M" "date" 50
      , Run Cpu ["-t", "CPU: <total>%", "-H", "50", "--high", "red"] 20
      , Run Memory ["-t", "Memory: <used>M (<usedratio>%)"] 20
      , Run DiskU [("/", "SSD: <free> free")] [] 60
      , Run Com "uname" ["-r"] "" 3600
      , Run
          DynNetwork
          [ "-t"
          , "Network: <tx> / <rx>"
          , "--Low"
          , "1000"
          , "--High"
          , "5000"
          , "--low"
          , "darkgreen"
          , "--normal"
          , "darkorange"
          , "--high"
          , "darkred"
          ]
          10
      , Run Kbd [("us", "US"), ("pl", "PL"), ("ru", "RU"), ("ua", "UA")]
      , Run
          Battery
          [ "--template"
          , "Battery: <left>%"
          , "--Low"
          , "20"
          , "--High"
          , "80"
          , "--low"
          , "#ff1744"
          , "--normal"
          , "#2979ff"
          , "--high"
          , "#76ff03"
          ]
          50
      , Run UnsafeStdinReader
      ]
  , alignSep = "}{"
  , template =
      " %UnsafeStdinReader% }{ <fc=#ef5350>%dynnetwork%</fc> <fc=#eeeeee> | </fc> <fc=#ab47bc>%cpu%</fc> <fc=#eeeeee> | </fc> <fc=#5c6bc0>%memory%</fc> <fc=#eeeeee> | </fc> <fc=#26c6da>%disku%</fc> <fc=#eeeeee> | </fc> <fc=#66bb6a>%battery%</fc> <fc=#eeeeee> | </fc> <fc=#ffee58>Keyboard: %kbd%</fc> <fc=#eeeeee> | </fc> <fc=#ff7043>%date%</fc> "
  }
