Config
  { font = "xft:JetBrainsMono Nerd Font:weight=bold:pixelsize=14:antialias=true:hinting=true"
  , bgColor = "#333333"
  , fgColor = "#e0e0e0"
  , position = Top
  , overrideRedirect = False
  , lowerOnStart = True
  , hideOnStart = False
  , allDesktops = True
  , persistent = True
  , commands =
      [ Run Date "  %a %d/%m/%y - %H:%M" "date" 50
      , Run Cpu ["-t", "  <total>%", "-H", "50", "--high", "red"] 20
      , Run Memory ["-t", "  <used>M (<usedratio>%)"] 20
      , Run DiskU [("/", "  <free> free")] [] 60
      , Run Com "uname" ["-r"] "" 3600
      , Run
          DynNetwork
          [ "-t"
          , "  <tx>    <rx>"
          , "--Low"
          , "1000"
          , "--High"
          , "5000"
          , "--low"
          , "darkgreen"
          , "--normal"
          , "darkorange"
          , "--high"
          , "darkred"
          ]
          10
      , Run Kbd [("us", "US"), ("pl", "PL"), ("ru", "RU"), ("ua", "UA")]
      , Run
          Battery
          [ "--template"
          , "  <left>%"
          , "--Low"
          , "20"
          , "--High"
          , "80"
          , "--low"
          , "#ff1744"
          , "--normal"
          , "#2979ff"
          , "--high"
          , "#76ff03"
          ]
          50
      , Run UnsafeStdinReader
      ]
  , alignSep = "}{"
  , template =
      "<fc=#69f0ae>  </fc> %UnsafeStdinReader% }{ <fc=#69f0ae>%dynnetwork%</fc> <fc=#eeeeee>  </fc> <fc=#69f0ae>%cpu%</fc> <fc=#eeeeee>  </fc> <fc=#69f0ae>%memory%</fc> <fc=#eeeeee>  </fc> <fc=#69f0ae>%disku%</fc> <fc=#eeeeee>  </fc> <fc=#69f0ae>%battery%</fc> <fc=#eeeeee>  </fc> <fc=#69f0ae>  %kbd%</fc> <fc=#eeeeee>  </fc> <fc=#69f0ae>%date%</fc> "
  }
